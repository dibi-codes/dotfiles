# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
alias wget='curl -O'
alias fastcommit='git commit . -m "$(curl -s https://whatthecommit.com/index.txt)"'
alias pwgencp='echo -n "$(pwgen -scn 32 1)" | pbcopy'
alias ls="gls --color=always"

# yay brew
yay() {
  if [[ $1 == "" ]]; then
    brew upgrade
  else
    brew $@
  fi
}

# kubePS1 config
get_kubecluster_color() {
    if [[ $KUBE_PS1_CONTEXT == *"prod"* ]]; then
        KUBE_PS1_CTX_COLOR=red
    elif [[ $KUBE_PS1_CONTEXT == *"test"* ]]; then
        KUBE_PS1_CTX_COLOR=yellow
    elif [[ $KUBE_PS1_CONTEXT == *"dev"* ]]; then
        KUBE_PS1_CTX_COLOR=green
    else
        KUBE_PS1_CTX_COLOR=blue
    fi
}
KUBE_PS1_BEFORE_FUNCTION=get_kubecluster_color
KUBE_PS1_NS_ENABLE=true
KUBE_PS1_PREFIX=[
KUBE_PS1_SUFFIX=]
#RPROMPT='$(kube_ps1)'

# K aliase
compdef kubecolor=kubectl

alias kubectl=kubecolor
alias ktp="kubectl top pods"
alias ktno="kubectl top nodes"
alias kdebug="kubectl run dibi-debug --rm -i --tty --image nicolaka/netshoot -- /bin/bash"

# Completion suggestions
ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE="fg=7"
bindkey '^ ' autosuggest-accept

zstyle ':completion:*' special-dirs true
fpath=($fpath ~/.zsh/completion)

## flux autocompletion
command -v flux >/dev/null && . <(flux completion zsh)

## Azure CLI Completion
autoload -U +X bashcompinit && bashcompinit
source /opt/homebrew/etc/bash_completion.d/az

## 1password cli completion
eval "$(op completion zsh)"; compdef _op op

alias watch="watch "

# for history search
bindkey '^[[A' up-line-or-search
bindkey '^[[B' down-line-or-search

source /Users/daniel/.docker/init-zsh.sh || true # Added by Docker Desktop
source <(talosctl completion zsh) || true # Talos completions

