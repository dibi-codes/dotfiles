# This is Git's per-user configuration file.
[core]
  excludesfile = "~/.gitignore"
{{- if (and (hasKey . "name") (hasKey . "email") (hasKey . "signingkey")) }}
[user]
  name = {{ .name | quote }}
  email = {{ .email | quote }}
  signingkey = {{ .signingkey | quote }}
{{- end }}
[commit]
  gpgsign = true
[pull]
  rebase = true
[gpg]
	program = gpg2
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[init]
	defaultBranch = main
